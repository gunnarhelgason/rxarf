{"description":"A report schema which can be used to report different kinds of fraud",
 "type":"object",
 "properties":{
   "Reported-From":{
     "type":"string",
     "format":"email"
   },
   "Report-ID":{
     "type":"string",
     "format":"email"
   },
   "Category":{
     "type":"string",
     "enum":["fraud"]
   },
   "Report-Type":{
     "type":"string",
     "enum":["phishing", "infected", "defacement", "scam", "spam"]
   },
   "Service":{
     "type":"string"
   },
  "Port":{
     "type":"integer"
   },
   "User-Agent":{
     "type":"string"
   },
   "Date":{
     "type":"string",
     "format":"date-time"
   },
   "Source":{
     "type":"string"
   },
   "Source-Type":{
     "type":"string",
     "enum":["ipv4","ipv6","ip-address","uri"]
   },
   "Domain":{
     "type":"string",
     "optional":true
   },
   "Attachment":{
     "type":"string",
     "enum":["none","text/plain","message/rfc822"],
     "optional":true
   },
   "Schema-URL":{
     "type":"string",
     "format":"uri"
   },
   "Version":{
     "type":"number",
     "optional":true
   },
   "Occurrences":{
     "type":"integer",
     "optional":true
   },
   "TLP":{
     "type":"string",
     "enum":["white","green","amber","red"],
     "optional":true
   }
 }
}
